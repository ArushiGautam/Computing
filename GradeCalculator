

#include <iostream>
#include <string>
using namespace std;

int main()
{
    //final and midterm
    double midterm;
    double finalExam;
    
    //homework
    int numbHw;
    double hw1 = 0, hw2 = 0, hw3 = 0, hw4 = 0, hw5 = 0, hw6 = 0, hw7 = 0;
    double lowScore = 0;
    double scoreHw;
    
    //schemes
    double schemeA;
    double schemeB;
    double clsGrade;
    string Grade;
    
    //Input final and midterm scores
    cout<< "Please enter the midterm exam score (0 - 100): ";
    cin>> midterm;
    cout<< "Please enter the final exam score (0 - 100): ";
    cin>> finalExam;
    
    // Input number of Homeworks, input Homework scores, and find the lowest score
    cout<< "Please enter number of homework assignments? (3-7) \n";
    cin>> numbHw;
    for (int y = 1; y < numbHw + 1; y++)
    {
        
        cout << "Please enter the homework " <<y<< " score (0 - 100): \n";
        switch (y)
        {
            case 1: cin>> hw1; lowScore = hw1; break;
            case 2: cin>> hw2; if (hw2 < lowScore) lowScore = hw2; break;
            case 3: cin>> hw3; if (hw3 < lowScore) lowScore = hw3; break;
            case 4: cin>> hw4; if (hw4 < lowScore) lowScore = hw4; break;
            case 5: cin>> hw5; if (hw5 < lowScore) lowScore = hw5; break;
            case 6: cin>> hw6; if (hw6 < lowScore) lowScore = hw6; break;
            case 7: cin>> hw7; if (hw7 < lowScore) lowScore = hw7; break;
            default:cout << "invalid input\n"; break;
                
        }
        
    }
    
    //hw and schemes calculations
    scoreHw = ((hw1 + hw2 + hw3 + hw4 + hw5 + hw6 + hw7 - lowScore)/((numbHw - 1)));
    schemeA = 0.25*scoreHw + 0.4*finalExam + 0.35*midterm;
    schemeB = 0.7*finalExam + 0.3*scoreHw;
   
    cout<< "Your final score based on Scheme A is " << schemeA << "\n";
    cout<< "Your final score based on Scheme B is " << schemeB << "\n";
    
    //comparing the 2 schemes
    if (schemeA > schemeB) clsGrade = schemeA;
    else clsGrade = schemeB;
    cout << "Your final score is " << clsGrade << "\n";
    
    // finding the letter grade based on the numerical grade
    if (clsGrade <= 100 && clsGrade > 90) Grade = "A";
    else if (clsGrade <= 90 && clsGrade > 80) Grade = "B";
    else if (clsGrade <= 80 && clsGrade > 70) Grade = "C";
    else if (clsGrade <= 70 && clsGrade > 60) Grade = "D";
    else Grade = "F";
    cout << "Your course grade is "<< Grade << "\n";
    
}


